{
  "compilerOptions": {
    "outDir": "./dist",          // Compiled files go to "dist"
    "rootDir": "./src",          // Source files are in "src"
    "module": "ESNext",        // Node.js uses CommonJS by default
    "target": "ESNext",          // Latest JavaScript target
    "moduleResolution": "Node", // Node-style resolution
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
